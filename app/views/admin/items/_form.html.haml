= form_for [:admin, @item] do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:

      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item_type_id
    %br
    = f.number_field :item_type_id
  .field
    = f.label :value
    %br
    = f.number_field :value
  .actions= f.submit
