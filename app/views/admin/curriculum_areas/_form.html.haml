= form_for [:admin, @curriculum_area] do |f|
  - if @curriculum_area.errors.any?
    #error_explanation
      %h2
        = pluralize(@curriculum_area.errors.count, "error")
        prohibited this curriculum_area from being saved:
      %ul
        - @curriculum_area.errors.full_messages.each do |msg|
          %li= msg

  .actions= f.submit
