= form_for [:admin, @place_type] do |f|
  - if @place_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@place_type.errors.count, "error")
        prohibited this place_type from being saved:

      %ul
        - @place_type.errors.full_messages.each do |msg|
          %li= msg

  .actions= f.submit
