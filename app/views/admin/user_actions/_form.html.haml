= form_for [:admin, @user_action] do |f|
  - if @user_action.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_action.errors.count, "error")
        prohibited this action from being saved:

      %ul
        - @user_action.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :action_type_id
    %br
    = f.number_field :action_type_id
  .field
    = f.label :reward_id
    %br
    = f.number_field :reward_id
  .field
    = f.label :risk_id
    %br
    = f.number_field :risk_id
  .field
    = f.label :challenge_id
    %br
    = f.number_field :challenge_id
  .actions= f.submit
