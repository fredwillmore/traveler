= form_for [:admin, @action_type] do |f|
  - if @action_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@action_type.errors.count, "error")
        prohibited this action_type from being saved:
      %ul
        - @action_type.errors.full_messages.each do |msg|
          %li= msg

  .actions= f.submit
