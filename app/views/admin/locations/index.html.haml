<h1>Listing locations</h1>

<table>
  <tr>
    <th>Lat</th>
    <th>Long</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.lat %></td>
    <td><%= location.lng %></td>
    <td><%= link_to 'Show', [:admin, location] %></td>
    <td><%= link_to 'Edit', edit_admin_location_path(location) %></td>
    <td><%= link_to 'Destroy', [:admin, location], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

