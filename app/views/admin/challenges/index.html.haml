<h1>Listing challenges</h1>

<table>
  <tr>
    <th>Challenge type</th>
    <th>Level</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @challenges.each do |challenge| %>
  <tr>
    <td><%= challenge.challenge_type_id %></td>
    <td><%= challenge.level %></td>
    <td><%= link_to 'Show', [:admin, challenge] %></td>
    <td><%= link_to 'Edit', edit_admin_challenge_path(challenge) %></td>
    <td><%= link_to 'Destroy', [:admin, challenge], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

