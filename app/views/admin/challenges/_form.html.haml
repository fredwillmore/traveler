= form_for [:admin, @challenge] do |f|
  - if @challenge.errors.any?
    #error_explanation
      %h2
        = pluralize(@challenge.errors.count, "error")
        prohibited this challenge from being saved:
      %ul
        - @challenge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :challenge_type_id
    %br
    = f.number_field :challenge_type_id
  .field
    = f.label :level
    %br
    = f.number_field :level
  .actions= f.submit
