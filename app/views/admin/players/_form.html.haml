= form_for [:admin, @player] do |f|
  - if @player.errors.any?
    #error_explanation
      %h2
        = pluralize(@player.errors.count, "error")
        prohibited this player from being saved:
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :location
    %br
    = f.text_field :location
  .field
    = f.label :level     
    %br
    = f.number_field :level
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :sex
    %br
    = f.text_field :sex
  .field
    = f.label :dob     
    %br
    = f.datetime_select :dob
  .field
    = f.label :occupation     
    %br
    = f.text_field :occupation
  .field
    = f.label :attractiveness     
    %br
    = f.number_field :attractiveness
  .field
    = f.label :charisma     
    %br
    = f.number_field :charisma
  .field
    = f.label :status     
    %br
    = f.number_field :status
  .field
    = f.label :intelligence     
    %br
    = f.number_field :intelligence
  .field
    = f.label :luck     
    %br
    = f.number_field :luck
  .actions
    = f.submit
