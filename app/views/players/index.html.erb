<h1>Listing players</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Level</th>
    <th>Sex</th>
    <th>Dob</th>
    <th>Occupation</th>
    <th>Energy</th>
    <th>Food</th>
    <th>Water</th>
    <th>Bio</th>
    <th>Money</th>
    <th>Confidence</th>
    <th>Attractiveness</th>
    <th>Charisma</th>
    <th>Status</th>
    <th>Intelligence</th>
    <th>Luck</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.location %></td>
    <td><%= player.level %></td>
    <td><%= player.sex %></td>
    <td><%= player.dob %></td>
    <td><%= player.occupation %></td>
    <td><%= player.energy %></td>
    <td><%= player.food %></td>
    <td><%= player.water %></td>
    <td><%= player.bio %></td>
    <td><%= player.money %></td>
    <td><%= player.confidence %></td>
    <td><%= player.attractiveness %></td>
    <td><%= player.charisma %></td>
    <td><%= player.status %></td>
    <td><%= player.intelligence %></td>
    <td><%= player.luck %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

